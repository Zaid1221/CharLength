<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zaidjavaid.charlength.MainActivity">

    <EditText
        android:id="@+id/sentence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="99dp"
        android:ems="10"
        android:hint="Type In A Sentence"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="37dp" />

    <TextView
        android:id="@+id/numCharsLabel"
        android:layout_width="185dp"
        android:layout_height="37dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Number of Chars:"
        android:textSize="24sp"
        android:layout_marginTop="47dp"
        app:layout_constraintTop_toBottomOf="@+id/sentence"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/number"
        android:layout_width="55dp"
        android:layout_height="34dp"
        android:ems="10"
        android:text="0"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/numCharsLabel"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="47dp"
        app:layout_constraintTop_toBottomOf="@+id/sentence"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
